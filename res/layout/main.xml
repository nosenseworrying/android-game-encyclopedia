<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    >
<ImageView android:src="@drawable/encyclopedia_title"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:paddingBottom="10px"
/>
<ImageButton android:id="@+id/btnFeatures" 
	android:src="@drawable/features_button"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:layout_gravity="center_horizontal"
	android:background="@color/transparent"
	android:paddingBottom="10px"
/> 
<ImageButton android:id="@+id/btnBrowse" 
	android:src="@drawable/browse_button"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:layout_gravity="center_horizontal"
	android:background="@color/transparent"
	android:paddingBottom="10px"
/> 
<ImageButton android:id="@+id/btnSearch" 
	android:src="@drawable/search_button"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:layout_gravity="center_horizontal"
	android:background="@color/transparent"
	android:paddingBottom="10px"
/> 
<ImageButton android:id="@+id/btnAbout" 
	android:src="@drawable/help_button"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:layout_gravity="center_horizontal"
	android:background="@color/transparent"
/>
</LinearLayout>
